<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="jmat.com.jumped.Game"
    android:orientation="vertical"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    android:weightSum="1">


    <jmat.com.jumped.GamePanel
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="0.94" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/ability1"
                android:id="@+id/ability1"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/ability2"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/ability2"
                android:id="@+id/ability2"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="left"
                android:id="@+id/left"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="right"
                android:id="@+id/right"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/left"
                android:layout_toEndOf="@+id/left" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="@string/basic"
                android:id="@+id/basic"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
